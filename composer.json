{
  "config": {
    "bin-dir": "bin/"
  },
  "name": "newage/remember-passwords",
  "description": "Site for remembering passwords uses SILEX framework",
  "license": "MIT",
  "keywords": [
    "passwords"
  ],
  "require": {
    "php": ">=5.5",
    "silex/silex": "~1.3",
    "twig/twig": "~1.24"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "squizlabs/php_codesniffer": "^2.3",
    "phpmd/phpmd": "2.1.*"
  },
  "autoload": {
    "psr-4": {
      "PasswordManager\\": "src/"
    }
  },
  "scripts": {
    "cs": "php bin/phpcs src --standard=PSR2 --colors",
    "cs-fix": "php bin/phpcbf src --standard=PSR2 --colors",
    "server": "php -S localhost:8000 -t public public/index.php"
  }
}